// Import Swiper styles
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";

const videos = [
    {
        id: "jnUcheL0xMk",
        title: "Diego en la Feria del Huapango",
    },
    {
        id: "-3OvO8Cqz-Q",
        title: "Presentación en vivo en el Festival Cultural de la Sierra",
    },
    {
        id: "jnUcheL0xMk",
