---
const emailAddress = "diegorn_2016@hotmail.com";
const qrCodeUrl = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(`mailto:${emailAddress}`)}`;
---

<section id="contact" class="contact">
    <div class="container">
        <h2>Contacto</h2>
        <div class="contact-info">
            <p>Escanea el c√≥digo QR para contactarme:</p>
            <div class="qr-container">
                <img src={qrCodeUrl} alt="QR Code for email" class="qr-code" />
                <div class="email-overlay">
                    <a href={`mailto:${emailAddress}`}>{emailAddress}</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact {
        background-color: white;
        padding: 6rem 0;
    }
    h2 {
        text-align: center;
        color: rgb(var(--accent));
        font-size: 3rem;
        margin-bottom: 3rem;
    }
    .contact-info {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }
    p {
        font-size: 1.2rem;
        color: rgb(var(--accent-dark));
        margin-bottom: 1.5rem;
    }
    .qr-container {
        position: relative;
        display: inline-block;
    }
    .qr-code {
        display: block;
        margin: 0 auto;
        border: 2px solid rgb(var(--accent));
        border-radius: 10px;
        padding: 10px;
        background-color: white;
        transition: opacity 0.3s ease;
    }
    .email-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(var(--accent), 0.8);
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 10px;
    }
    .email-overlay a {
        color: white;
        text-decoration: none;
        font-size: 0.65rem;
        font-weight: bold;
        padding: 0.5rem;
        word-break: break-all;
        text-align: center;
    }
    .qr-container:hover .qr-code {
        opacity: 0.3;
    }
    .qr-container:hover .email-overlay {
        opacity: 1;
    }
</style>
